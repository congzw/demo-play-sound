@using NbSites.Web.Libs.PlaySounds
@inject IPlaySoundFileRepository Repository
@{
    var playSoundFiles = Repository.Query().ToList();
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/content/libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>文本+音效</h2>
        <ul>
            @foreach (var item in playSoundFiles)
            {
                <li>
                    <a href="~/Home/GetPlay/@item.Id">@item.Description</a>
                </li>
            }
        </ul>
        <hr />
        <h2>文本</h2>
        <ul>
            @foreach (var item in playSoundFiles)
            {
                <li>
                    <a href="~/Home/GetSpeak/@item.Description">@item.Description</a>
                </li>
            }
        </ul>
        <hr />
        @RenderBody()
    </div>
</body>
</html>
